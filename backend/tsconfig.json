{
	"compilerOptions": {
		"baseUrl": "src",
		"rootDir": ".",
		"outDir": "dist",
		"target": "ES2020",
		"types": ["node", "reflect-metadata"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["src"]
}
